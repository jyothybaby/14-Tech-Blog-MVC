<div class="card">
    <h3 class="card-header">Edit Post</h3>
    <form class="card-body edit-post-form" id="edit-post-form">
        <label for="post-title" class="form-label">Title</label>
        <div class="form-floating mb-3">
            <input name="post-title" type="text" value="{{posts.title}}" class="form-input w-100" />
        </div>

        <label class="form-label" for="content">Content</label>
        <div class="form-floating mb-3">
            <textarea name="content" type="text" class="form-input w-100"
                style="height: 100px" />{{posts.content}}</textarea>
        </div>

        <button type="submit" class="w-100 btn btn-lg btn-info mb-3">Update </button>
        <button type="button" class="delete-post-btn w-100 btn btn-lg btn-danger mb-3">Delete</button>
    </form>
</div>


<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>